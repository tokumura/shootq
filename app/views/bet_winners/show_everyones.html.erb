<h3>優勝・準優勝・３位　みんなの予想</h3>

<table class="table table-bordered table-hover" style="">
  <thead>
    <tr>
      <th style="text-align:center; width:7%;"></th>
      <th style="text-align:center;">優勝</th>
      <th style="text-align:center;">準優勝</th>
      <th style="text-align:center;">３位</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td style="text-align:center;">結果</td>
      <td style="text-align:center;">　</td>
      <td style="text-align:center;">　</td>
      <td style="text-align:center;">　</td>
    <tr/>
    <% @users.each do |u| %>
      <% bw = u.bet_winner %>
      <tr>
        <td style="text-align:center;">
          <%=u.user_info.name%>
        </td>

        <% #color = BetSecond.get_color("a", u.id.to_s) %>
        <td style="text-align:center;">
          <%=Country.get_name(bw.winner_first)%>
        </td>

        <td style="text-align:center;">
          <%=Country.get_name(bw.winner_second)%>
        </td>

        <td style="text-align:center;">
          <%=Country.get_name(bw.winner_third)%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


